@{
    ViewData["Title"] = "Login";
}

<div class="login">
    <div class="login_div_form">
        <div>
            <h1>Inmobiliaria</h1>
            <p>Colombo</p>
        </div>
        <form asp-action="Login" asp-controller="Home">
            <h4>Email</h4>
            <input type="email" name="email" placeholder="email" />
            <h4>Contraseña</h4>
            <input type="password" name="clave" placeholder="****" />
            <select name="rol">
                <option value="Propietario" selected>Propietario</option>
                <option value="Administrador">Administrador</option>
            </select>
            <div> 
                <input type="submit" name="ingresar" value="Ingresar" />
            </div>
        </form>
        <span style="color:red">@ViewBag.Mensaje</span>
        <a asp-route="CreatePropietario">Registrate</a>
    </div>
</div>

