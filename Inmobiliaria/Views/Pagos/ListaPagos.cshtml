@model IEnumerable<Inmobiliaria.Models.Pago>

@{
    ViewData["Title"] = "ListaPagos";
}


<div class="div_tabla">
    <h1>Lista de Pagos</h1>
    @if (Model.Count() == 0)
    {
        <h3>No hay Pagos</h3>
    }
    else
    {
        <table class="tableListaPropietario">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NroPago)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaPago)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Importe)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado)
                    </th>
                    <th>
                        Inquilino
                    </th>
                    <th>
                        Direccion
                    </th>
                    <th>
                        Tipo
                    </th>
                    <th>
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NroPago)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaPago)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Importe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @(item.Contrato.Inquilino.Nombre + " " + item.Contrato.Inquilino.Apellido)
                    </td>
                    <td>
                        @(item.Contrato.Inmueble.Direccion)
                    </td>
                    <td>
                        @(item.Contrato.Inmueble.Tipo)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
</div>