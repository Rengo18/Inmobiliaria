@model Inmobiliaria.Models.Inquilino

@{
    ViewData["Title"] = "Edit";
}





<div class="div_Editar">
    <div class="div_Editar_contenido">
        <h2>Editar Inquilino</h2>        
        <form asp-action="Edit">           
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
               
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="Dni" class="control-label"></label>
                <input asp-for="Dni" class="form-control" />
             
            </div>
            <div class="form-group">
                <label asp-for="Domicilio" class="control-label"></label>
                <input asp-for="Domicilio" class="form-control" />
               
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="Lugar_Trabajo" class="control-label"></label>
                <input asp-for="Lugar_Trabajo" class="form-control" />
                
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <p style="color:red">@ViewBag.error</p>
            </div>
        </form>
    </div>
</div>



